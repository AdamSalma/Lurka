{
  "author": "Adam Salma <adam3salma@gmail.com>",
  "name": "Lurka",
  "version": "0.11.0",
  "description": "A desktop app for viewing online messaging boards such as 4chan and reddit",
  "scripts": {
    "build": "gulp build",
    "start": "electron ./app",
    "test": "cross-env NODE_ENV=test NODE_PATH=./app/node_modules mocha || exit 0",
    "dev": "cross-env NODE_PATH=./app/node_modules nodemon --watch ./src/server ./src/server",
    "flow": "flow",
    "clear": "gulp clear",
    "test:watch": "cross-env NODE_ENV=test NODE_PATH=./app/node_modules mocha -R min -w || exit 0",
    "postinstall": "cd ./app && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdamSalma/Lurka.git"
  },
  "keywords": [
    "React",
    "Webpack",
    "Babel",
    "Memes",
    "Viewer"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AdamSalma/Lurka/issues"
  },
  "homepage": "https://github.com/AdamSalma/Lurka#readme",
