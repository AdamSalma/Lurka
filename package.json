{
  "author": "Adam Salma <adam3salma@gmail.com>",
  "name": "Lurka",
  "version": "1.0.1-alpha",
  "description": "A 4chan desktop app for power users",
  "main": "build/index.js",
  "scripts": {
    "___CORE___": "These scripts will get you going with Lurka",
    "start": "concurrently -k --raw \"npm run webpack\" \"npm run electron\"",
    "test": "npm run mocha",
    "test:watch": "npm run mocha -R min -w",
    "preview": "concurrently -k --raw \"npm run webpack:preview\" \"npm run electron\"",
    "___BUILD___": "These scripts will bundle Lurka in production",
    "build": "npm run gulp build",
    "build:app": "npm run gulp build:app",
    "build:electron": "npm run gulp build:electron",
    "build:clear": "npm run gulp build:clear",
    "___PACKAGE___": "These will package the build into distributables.",
    "package": "cross-env PLATFORM=current npm run gulp package",
    "package:win": "npm run gulp package:win",
    "package:mac": "npm run gulp package:mac",
    "package:linux": "npm run gulp package:linux",
    "package:travis": "npm run gulp package:travis",
    "package:appveyor": "npm run gulp package:appveyor",
    "package:portable": "npm run gulp package:portable",
    "___HELPERS___": "Utils for common things I need",
    "reinstall": "npm run uninstall && npm install",
    "uninstall": "rm -rf ./node_modules/**/* && rm -rf ./build/node_modules/**/*",
    "preinstall": "cd build && npm install",
    "___SECONDARY___": "These only get used by other scripts",
    "electron": "npm run env:dev electron ./shells/electron",
    "webpack": "webpack-dev-server --env=development --watch --debug --color --config tools/webpack",
    "webpack:preview": "webpack-dev-server --env=preview --watch --debug --color --config tools/webpack",
    "mocha": "cross-env NODE_PATH=./build/node_modules mocha --opts tools/mocha/mocha.opts --",
    "gulp": "gulp --gulpfile tools/gulp --cwd . --color --",
    "env:prod": "cross-env NODE_ENV=production",
    "env:dev": "cross-env NODE_ENV=development NODE_PATH=./build/node_modules",
    "env:test": "cross-env NODE_PATH=./build/node_modules",
    "dev": "npm start",
    "___REFACTOR___": "TODOs:",
    "OLDprepreview": "npm run --silent gulp --silent ensureAppIsBuilt",
    "OLDpreview": "electron ./build/",
    "OLDbundle:ui": "npm run gulp bundle:ui",
    "OLDbundle:electron": "webpack --env=electron --color --config tools/webpack"
  },
  "build": {
    "appId": "lurka",
    "productName": "Lurka",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdamSalma/Lurka.git"
  },
  "keywords": [
    "4chan",
    "4chan browser",
    "Image board",
    "Memes",
    "Desktop",
    "Desktop-application",
    "Chrome Extension",
    "Power user"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AdamSalma/Lurka/issues"
  },
  "homepage": "https://github.com/AdamSalma/Lurka#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "axios-mock-adapter": "^1.9.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.16.3",
    "clear": "0.0.1",
    "cli-color": "^1.1.0",
    "concurrently": "^3.5.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.4",
    "del": "^3.0.0",
    "electron": "^1.7.10",
    "electron-builder": "^19.52.1",
    "electron-packager": "^9.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^2.6.3",
    "eslint": "^4.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.1.0",
    "expect": "1.20.2",
    "expect-jsx": "^3.0.0",
    "file-loader": "^0.11.2",
    "gulp": "git+https://git@github.com/gulpjs/gulp.git#4.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.29.0",
    "ignore-loader": "^0.1.1",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.5.1",
    "json-loader": "^0.5.4",
    "jsx-loader": "^0.13.2",
    "minimist": "^1.2.0",
    "mocha": "^3.5.3",
    "mocha-jsdom": "^1.1.0",
    "mocha-webpack": "^1.0.1",
    "multiple-glob": "0.0.3",
    "mustache": "^2.3.0",
    "mustache-loader": "^1.2.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^2.0.6",
    "postcss-nested": "^2.0.2",
    "react-addons-perf": "^15.4.2",
    "react-hot-loader": "3.0.0-beta.2",
    "read-babelrc-up": "^0.2.0",
    "redux-mock-store": "^1.3.0",
    "rimraf": "^2.6.2",
    "run-sequence": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "undertaker-forward-reference": "^1.0.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0",
    "webpack-build-notifier": "^0.1.14",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-dev-server": "^2.8.2",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-manifest-plugin": "^1.3.2",
    "webpack-node-externals": "^1.6.0"
  }
}
