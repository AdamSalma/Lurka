{
  "author": "Adam Salma <adam3salma@gmail.com>",
  "name": "Lurka",
  "version": "0.15.0",
  "description": "A 4chan desktop app for power users",
  "scripts": {
    "prestart": "npm run --silent gulp --silent ensureAppIsBuilt",
    "start": "electron build/",
    "build": "npm run gulp build",
    "clear": "npm run gulp clear",
    "dev": "concurrently -k --raw \"npm run webpack\" \"npm run electron\"",
    "webpack": "webpack-dev-server --env.dev --watch --debug --color --config tools/webpack",
    "electron": "npm run env:dev electron ./src/shells/electron",
    "test": "npm run mocha",
    "test:watch": "npm run mocha -R min -w",
    "mocha": "npm run env:test mocha --opts tools/mocha/mocha.opts --",
    "bundle:ui": "npm run gulp bundle:ui",
    "bundle:server": "npm run gulp bundle:server",
    "prepackage": "npm run gulp prepackage",
    "package": "electron-packager build Lurka --all --out dist",
    "gulp": "gulp --gulpfile tools/gulpfile.js --cwd . --color --",
    "uninstall": "rimraf ./node_modules/**/* && rimraf ./build/node_modules/**/*",
    "reinstall": "npm run uninstall && npm install",
    "preinstall": "cd build && npm install",
    "env:prod": "cross-env NODE_ENV=production",
    "env:dev": "cross-env NODE_ENV=development NODE_PATH=./build/node_modules",
    "env:test": "cross-env NODE_ENV=test NODE_PATH=./build/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdamSalma/Lurka.git"
  },
  "keywords": [
    "4chan",
    "4chan browser",
    "Image board",
    "Memes",
    "Viewer",
    "Desktop",
    "Chrome Extension"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AdamSalma/Lurka/issues"
  },
  "homepage": "https://github.com/AdamSalma/Lurka#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "axios-mock-adapter": "^1.9.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.16.3",
    "clear": "0.0.1",
    "cli-color": "^1.1.0",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "del": "^3.0.0",
    "electron": "^1.6.11",
    "electron-packager": "^8.7.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^2.6.3",
    "eslint": "^4.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.1.0",
    "expect": "1.20.2",
    "expect-jsx": "^3.0.0",
    "file-loader": "^0.11.2",
    "gulp": "^3.9.1",
    "html-webpack-plugin": "^2.29.0",
    "ignore-loader": "^0.1.1",
    "json-loader": "^0.5.4",
    "jsx-loader": "^0.13.2",
    "mocha": "^3.1.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.2",
    "postcss-nested": "^2.0.2",
    "react-addons-test-utils": "^15.6.0",
    "react-hot-loader": "3.0.0-beta.2",
    "read-babelrc-up": "^0.2.0",
    "rimraf": "^2.5.4",
    "run-sequence": "^2.0.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.1.0",
    "webpack-build-notifier": "^0.1.14",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-dev-server": "^2.5.1",
    "webpack-hot-middleware": "^2.18.2"
  }
}
