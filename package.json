    "eslint": "^4.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.1.0",
    "expect": "1.20.2",
    "expect-jsx": "^3.0.0",
    "file-loader": "^0.11.2",
    "gulp": "4.0.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.29.0",
