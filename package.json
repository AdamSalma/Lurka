{
  "author": "Adam Salma <adam3salma@gmail.com>",
  "name": "Lurka",
  "version": "0.1.6",
  "description": "Messaging board viewer and scraper.",
  "node-main": "./dist/index.html",
  "main": "http://localhost:3000",
  "node-remote": "localhost",
  "scripts": {
    "dev": "node ./server",
    "server": "cross-env NODE_ENV=production node ./server",
    "start": "./node_modules/.bin/nodewebkit",
    "bundle": "gulp bundle",
    "build": "webpack --config ./webpack.production.config.js --progress --profile --colors",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha",
    "test-watch": "cross-env NODE_ENV=test ./node_modules/.bin/mocha -R min -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdamSalma/Lurka.git"
  },
  "keywords": [
    "React",
    "Webpack",
    "Babel",
    "Memes",
    "Viewer"
  ],
  "license": "MIT",
  "bugs": {
